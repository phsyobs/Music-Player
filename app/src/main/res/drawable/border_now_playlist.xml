<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:start="2dp"
        android:end="2dp"
        android:top="2dp"
        android:bottom="2dp">   //왼쪽(start), 오른쪽(end), 위쪽(top), 아래쪽(bottom) 테두리
        <shape android:shape="rectangle">   //모양은 직사각형으로
            <stroke android:width="2dp"
                android:color="@color/now_playing_playlist"/> //테두리 두깨는 2dp, 색은 @color/now_playing_music
            <solid android:color = "#FFFFFFFF"/> //내부색은 흰색
        </shape>
    </item>
</layer-list>